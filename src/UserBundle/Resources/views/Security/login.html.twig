{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="container">
        <div class="layout__middle">
            <div class="form__bar">
                <a href="{{ path('fos_user_registration_register') }}" class="form__bar__status">
                    s'enregistrer
                </a>
                <a href="{{ path('fos_user_security_login') }}" class="form__bar__status form__bar__status--active">
                    connexion
                </a>
            </div>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form class="form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" />

                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </form>

            <p class="form__other">OU se connecter avec</p>
            <a href="" class="button__facebook">facebook</a>
        </div>
    </div>
{% endblock fos_user_content %}
