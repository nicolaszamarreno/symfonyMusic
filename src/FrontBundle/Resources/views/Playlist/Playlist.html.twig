                    <h3 class="playlist__genre">
                        Rap US
                    </h3>
                    <p class="playlist__describe">
                        <span>23 titres</span>
                        Disponible 5 jours
                    </p>
                </div>
                {% endimage %}
            </div>
        </div>
    </article>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts '@FrontBundle/Resources/public/js/*.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}